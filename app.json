{
	"id": "nl.philips.hue",
	"version": "2.0.0",
	"compatibility": ">=0.10.0",
	"name": {
		"en": "Philips Hue"
	},
	"description": {
		"en": "Philips Hue for Homey"
	},
	"author": {
		"name": "Athom B.V."
	},
	"images": {
		"large": "assets/images/large.jpg",
		"small": "assets/images/small.jpg"
	},
	"category": "lights",
	"drivers": [
		{
			"id": "bulb",
			"name": {
				"en": "Light",
				"nl": "Lamp"
			},
			"class": "light",
			"capabilities": [ "onoff", "dim", "light_hue", "light_saturation", "light_temperature" ],
			"images": {
				"large": "drivers/bulb/assets/images/large.jpg",
				"small": "drivers/bulb/assets/images/small.jpg"
			},
			"pair": [
				{
					"id": "select_bridge",
					"navigation": {
						"next": "press_button"
					}
				},
				{
					"id": "press_button"
				},
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_devices"
					}
				},
				{
					"id": "add_devices",
					"template": "add_devices"
				}
			]
		},
		{
			"id": "dimmerswitch",
			"name": {
				"en": "Dimmer Switch",
				"nl": "Dimmer Switch"
			},
			"class": "other",
			"capabilities": [],
			"images": {
				"large": "drivers/dimmerswitch/assets/images/large.jpg",
				"small": "drivers/dimmerswitch/assets/images/small.jpg"
			},
			"pair": [
				{
					"id": "select_bridge",
					"navigation": {
						"next": "press_button"
					}
				},
				{
					"id": "press_button"
				},
				{
					"id": "list_devices",
					"template": "list_devices",
					"navigation": {
						"next": "add_devices"
					}
				},
				{
					"id": "add_devices",
					"template": "add_devices"
				}
			]
		}
	],
	"flow": {
		"triggers": [
			{
				"id": "dimmerswitch_button_pressed",
				"title": {
					"en": "A button is pressed",
					"nl": "Een knop is ingedrukt"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=dimmerswitch"
					},
					{
						"name": "button",
						"type": "dropdown",
						"values": [
							{
								"id": "on",
								"label": {
									"en": "On",
									"nl": "Aan"
								}
							},
							{
								"id": "increase_brightness",
								"label": {
									"en": "Increase brightness",
									"nl": "Verhoog helderheid"
								}
							},
							{
								"id": "decrease_brightness",
								"label": {
									"en": "Decrease brightness",
									"nl": "Verlaag helderheid"
								}
							},
							{
								"id": "off",
								"label": {
									"en": "Off",
									"nl": "Uit"
								}
							}
						]
					}
				]
			}
		],
		"actions": [
			{
				"id": "shortAlert",
				"title": {
					"en": "Blink the light (short)",
					"nl": "Knipper de lamp (kort)"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=bulb"
					}
				]
			},
			{
				"id": "longAlert",
				"title": {
					"en": "Blink the light (long)",
					"nl": "Knipper de lamp (lang)"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=bulb"
					}
				]
			},
			{
				"id": "brightnessIncrement",
				"title": {
					"en": "Change brightness over time",
					"nl": "Verander helderheid over tijd"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=bulb"
					},
					{
						"name": "trans",
						"type": "number",
						"placeholder":{
							"en": "Transition (s)",
							"nl": "Tijdsduur (s)"
						},
						"min":"0"
					},
					{
						"name": "brightness",
						"type": "number",
						"placeholder":{
							"en": "Brightness (%)",
							"nl": "Helderheid (%)"
						},
						"min":"0",
						"max":"100"
					}
				]
			},
			{
				"id": "startColorLoop",
				"title": {
					"en": "Start colorloop effect",
					"nl": "Begin kleur effect"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=bulb"
					}
				]
			},
			{
				"id": "stopColorLoop",
				"title": {
					"en": "Stop colorloop effect",
					"nl": "Stop kleur effect"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=bulb"
					}
				]
			},
			{
				"id": "setRandomColor",
				"title": {
					"en": "Set random color",
					"nl": "Kies willekeurige kleur"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=bulb"
					}
				]
			},
			{
				"id": "setScene",
				"title": {
					"en": "Set a scene",
					"nl": "Activeer een scene"
				},
				"args": [
					{
						"name": "scene",
						"type": "autocomplete"
					}
				]
			},
			{
				"id": "allOff",
				"title": {
					"en": "Turn all lights off in a room",
					"nl": "Zet alle lampen uit in een ruimte"
				},
				"args": [
					{
						"name": "group",
						"type": "autocomplete"
					}
				]
			}
		]
	}
}
